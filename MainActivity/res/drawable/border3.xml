<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="2dip" android:color="#171c20" />
             <gradient  android:angle="-90"  android:startColor="#3FBE3F" android:endColor="#626b70"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#990099" />
             <solid  android:color="#202020"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#171c20" />
             <gradient  android:angle="-90"  android:startColor="#c7c7c7" android:endColor="#979797" />  
         </shape>
     </item>
</selector>
