<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ef4444" />
      <stroke
          android:width="1dp"
          android:color="#326c99" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="100dp"
          android:top="10dp"
          android:right="100dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#3f87c0"
          android:endColor="#326c99"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#326c99" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="100dp"
          android:top="10dp"
          android:right="100dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>